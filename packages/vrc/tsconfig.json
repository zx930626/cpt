{
  "compilerOptions": {
    "target": "ES2015",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitOverride": true,
    "noUnusedLocals": false,
    "esModuleInterop": true,
    "useUnknownInCatchVariables": false,
    "noImplicitAny": false,
    "outDir": "./lib",
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}